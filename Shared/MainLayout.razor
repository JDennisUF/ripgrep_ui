@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu OnShowSettings="ShowEditorSettings" />
    </div>

    <main>
        <div class="top-row px-4">
            <h1>Ripgrep UI</h1>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<EditorSettingsModal @ref="editorSettingsModal" />

@code {
    private EditorSettingsModal? editorSettingsModal;

    private async Task ShowEditorSettings()
    {
        if (editorSettingsModal != null)
        {
            await editorSettingsModal.ShowAsync();
        }
    }
}